<h1>Listing Points</h1>

<table>
  <thead>
    <tr>
      <th>Latitud</th>
      <th>Longitud</th>
      <th>Tiempo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @points.each do |point| %>
      <tr>
        <td><%= point.latitud %></td>
        <td><%= point.longitud %></td>
        <td><%= point.tiempo.strftime("%I:%M:%S %p") %></td>
        <td><%= link_to 'Editar', edit_track_point_path(point.track, point) %></td>
        <td><%= link_to 'Eliminar', [point.track, point], method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

