<script src='https://api.tiles.mapbox.com/mapbox.js/v2.2.1/mapbox.js'></script>
<link href='https://api.tiles.mapbox.com/mapbox.js/v2.2.1/mapbox.css' rel='stylesheet' />

<p id="notice"><%= notice %></p>


<table class="table table-condensed">
  <thead>
    <tr>
      <th>Recorrido</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @tracks.accessible_by(current_ability).each do |track| %>
      <tr>
        <td><%= track.name %></td>
        <td><%= track.fecha %></td>
        <td><button class="btn " type="button"><%= link_to 'Ver', track_path(track) %></button></td>
        <td><button class="btn " type="button"><%= link_to 'Subir Archivo', track_points_path(track) %><td>
        <td><button class="btn " type="button"><%= link_to 'Nombrar',  edit_track_path(track) %></td> 
        <td><%= link_to 'Eliminar', track, method: :delete, data: { confirm: '¿Estás Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



